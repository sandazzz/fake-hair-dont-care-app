model Donation {
  id                Int      @id @default(autoincrement())
  civility          String
  firstName         String
  lastName          String
  age               Int?
  hairTypes         String
  email             String
  allowResale       Boolean  @default(false)
  allowWigUse       Boolean  @default(false)
  wantsConfirmation Boolean
  message           String?
  donationDate      DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Stocker le hash du mot de passe
  createdAt DateTime @default(now())
}